
<div class="admin-editar">
    <div class="backArrow">
        <a href="/admin"><i class="fa-solid fa-arrow-left"></i></a>
    </div>
    Lista de producto:
    {{#each results}}
    <div class="catalogo-item edit-catalogo-item">
        <table>
            <tr><th>Modelo:</th><td>{{modelo}}</td></tr>
            <tr><th>Tama√±o:</th><td>{{tamano}} GB</td></tr>
            <tr><th>Precio:</th><td>U$D {{precio}}</td></tr>
            <tr><th>Imagen:</th><td> *** </td></tr>
            
        </table>
        <div class="edit-btns">
            <button id="btn_edit" data-modelo="{{modelo}}" data-tamano="{{tamano}}" data-precio="{{precio}}"><i class="fa-solid fa-pen-to-square"></i></button>
            <button id="btn_delete" data-id="{{id}}"><i class="fa-solid fa-trash-can"></i></button>
        </div>
    </div> 
    {{/each}}
</div>

<script>
    function displayForm(){
        var confirmForm = document.querySelector("#delete_form");
        if (confirmForm.style.display === "flex") {
            confirmForm.style.display = "none";
        } else {
            confirmForm.style.display = "flex";
        }
    }

    var deleteButton = document.querySelectorAll("button#btn_delete");
    deleteButton.forEach(function(item,idx){
        item.addEventListener('click', function() {
            dataId = item.dataset.id;
            {{!-- console.log(dataId); --}}
            displayForm();

            var inputClass = document.querySelector(".dlte_id");
            inputClass.setAttribute("value", dataId);
        });
    });

</script>


<form action="/delete" method="post" id="delete_form">
    Borrar articulo?
    <input type="hidden" name="id" class="dlte_id" required>

    <button type="button" onclick="displayForm()">CANCELAR</button>
    <button type="submit">ELIMINAR</button>
</form>


